<h2>Available drones</h2>
<ul>
  {{#each drones }}
  <li>{{this.name}}, {{this.propellers}}, {{this.maxSpeed}}</li>
  <a href="/drones/{{this.id}}/edit">Edit drone</a>
  <form action="/drones/{{this.id}}/delete" method="post">
    <button type="submit">Delete Drone</button>
  </form>
  {{/each}}

</ul>